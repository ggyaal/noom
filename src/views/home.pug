doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Noom
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/reset-css@5.0.1/reset.min.css")
		link(rel="stylesheet", href="/public/css/style.css")
	body
		div#wrapper
			header
				h1 Noom
			main
				div#welcome 🐚
				div#chat-main
					div#roomList
						div RoomList
						ul
						form#createRoom
							input(type="text", placeholder="create a room")
							button Create
						form#nickChange
							h5 Change your nickname !
							div
								input(type="text", placeholder="change to nickname")
								button.nickFormBtn Change
					div#video-main
						video#video(autoplay, playsinline, width="550")
						div#video-info
							select#my-videos.select-devices
							button#video-on.actived Video On
							button#mute Unmute
							select#my-audios.select-devices
						div#videoList
							video#myVideo(autoplay, playsinline, width="200")
							div#letter
								ul#pannel
									li 😀
									li 😁
									li 😆
									li 😍
									li 🥰
									li 😘
									li 😅
									li 😂
									li 😝
									li 🤪
									li 😔
									li 😎
									li 😡
									li 😭
									li 😗
									li 🥶
									li 🤢
									li 🤑
									li 🫣
									li 😳
									li 🥳
					div#chatting
						div#chatting-header
							div.roomName
							button#reaveBtn Leave Room
						ul
						form#message
							input(type="text", placeholder="send to message")
							button Send
				form#nick
					h5 What's your nickname ?
					input(type="text", placeholder="choose to nickname")
					button.nickFormBtn Save
		script(src="/socket.io/socket.io.js")
		script(src="/public/js/app.js")
