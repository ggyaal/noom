doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Noom
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/reset-css@5.0.1/reset.min.css")
		link(rel="stylesheet", href="/public/css/style.css")
	body
		div#wrapper
			header
				h1 Noom
			main
				div#welcome üêö
				div#chat-main
					div#roomList
						div RoomList
						ul
						form#createRoom
							input(type="text" placeholder="create a room")
							button Create
						form#nickChange
							h5 Change your nickname !
							div
								input(type="text", placeholder="change to nickname")
								button Change
					div#chatting
						div.roomName
						ul
						form#message
							input(type="text", placeholder="send to message")
							button Send
				form#nick
					h5 What's your nickname ?
					input(type="text", placeholder="choose to nickname")
					button Save
		script(src="/socket.io/socket.io.js")
		script(src="/public/js/app.js")
